<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="设置">

        <EditTextPreference
            app:key="user_id"
            app:title="名字"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="server_ip"
            app:title="ip"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="server_port"
            app:title="端口"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>
